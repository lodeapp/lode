{
    "compilerOptions": {
      "module": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2020",
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": true,
      "strict": true,
      "sourceMap": true,
      "jsx": "preserve",
      "outDir": "./dist",
      "types" : [ "node", "lodash" ],
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ],
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./renderer/*"],
        "@main/*": ["./main/*"],
        "@lib/*": ["./lib/*"]
      },
      "allowJs": true,
      "lib": [
        "DOM",
        "ES2020"
      ]
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "compileOnSave": false
}
