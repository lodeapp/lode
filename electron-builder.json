{
  "productName": "Lode",
  "appId": "com.recontra.lode",
  "directories": {
    "buildResources": "support",
    "output": "build"
  },
  "files": [
    "dist/**/*"
  ],
  "asar": true,
  "asarUnpack": [
    "dist/static/reporters/**/**",
    "dist/preload.js"
  ],
  "extends": null,
  "afterSign": "./workflow/after-sign.js",
  "mac": {
    "category": "public.app-category.developer-tools",
    "icon": "build/icons/512x512.png",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "./support/entitlements.mac.plist",
    "entitlementsInherit": "./support/entitlements.mac.plist",
    "target": [
      "zip",
      "dmg"
    ]
  },
  "dmg": {
    "background": "./support/assets/dmg-bg.tiff",
    "contents": [
      {
        "x": 400,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ],
    "window": {
      "x": 400,
      "y": 200,
      "width": 488,
      "height": 356
    }
  },
  "win": {
    "publisherName": ["Tomas Buteler"],
    "icon": "build/icons/512x512.png",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "zip"
    ]
  },
  "linux": {
    "category": "Development",
    "icon": "build/icons/512x512.png",
    "target": [
      "deb",
      "tar.gz",
      "appimage"
    ]
  },
  "publish": [
    {
      "provider": "github"
    }
  ]
}
