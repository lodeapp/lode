{
    "compilerOptions": {
      "module": "es6",
      "moduleResolution": "node",
      "target": "es6",
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": true,
      "strict": true,
      "sourceMap": true,
      "outDir": "./dist",
      "types" : [ "node", "lodash" ],
      "typeRoots": [ "./node_modules/@types" ],
      "allowJs": true,
      "lib": [
        "dom",
        "es7"
      ]
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "include": [
        "src/main/**/*.ts"
    ],
    "compileOnSave": false
}
